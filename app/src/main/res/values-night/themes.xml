<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/gray_30</item>
        <item name="cornerRadius">50dp</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="MyButton.Operator">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="MyButton.OperatorBackground">
        <item name="backgroundTint">@color/green</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="MyButton.Deletion">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="MyButton.DeletionBackground">
        <item name="backgroundTint">@color/orange</item>
        <item name="iconTint">@color/white</item>
        <item name="icon">@drawable/ic_plus_minus_white</item>
    </style>
</resources>